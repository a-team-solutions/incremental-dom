{
  "name": "incremental-dom",
  "version": "0.7.0",
  "description": "An in-place virtual DOM library",
  "main": "dist/node/index.js",
  "author": "The Incremental DOM Authors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/incremental-dom.git"
  },
  "files": [
    "index.ts",
    "src",
    "dist"
  ],
  "scripts": {
    "dist": "npm run clean && npm run build:node && npm run build:web && npm run build:web-min",
    "clean": "rm -rf dist/web && rm -rf dist/node",
    "update": "npm-check -u",
    "build:node": "tsc --project ./tsconfig.build.json",
    "build:web": "webpack --mode=development --output-filename='incremental-dom.js'",
    "build:web-min": "webpack --mode=production --output-filename='incremental-dom.min.js'"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "npm-check": "^5.6.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {}
}
